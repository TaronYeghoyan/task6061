@model Domain.POCO.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fn)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ln)
        </dd>
        <dt class="col-sm-2">
            Birth Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.d)
        </dd>
        <dt class="col-sm-2">
            Wage
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.w)
        </dd>
        <dt class="col-sm-2">
            Work days
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.wd)
        </dd>
        <dt class="col-sm-2">
